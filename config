volume master {
	format = " %volume"
	format_muted = ""
	device = "hw:0"
	mixer = "Master"
	mixer_idx = 0
}

cpu_usage {
	format = " %usage"
}

cpu_temperature 0 {
	format = " %degrees °C"
}

wireless _first_ {
        format_up = " %ip  %bitrate  (%quality at %essid)"
        format_down = ""
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = " %ip  %bitrate (%speed)"
        format_down = " "
}

battery_level {
	format = "{icon} {percent}% {time_remaining}"
	battery_id = "all"
#	blocks = "default"
	charging_character = ""
	format_notify_charging = "default"
	format_norify_discharging = "default"
	threshold_full = 100
	threshold_degraded = 30
	threshold_bad = 10
	notify_low_level = true
	hide_seconds = true
	cache_timeout = 30	
}

net_rate {
	format = "{interface}: {total}"
}

battery all {
        format = "%status %percentage %remaining"
	status_chr = ""
	status_bat = ""
	hide_seconds = true
	integer_battery_capacity = true
}

tztime local {
        format = " %H:%M:%S  %d-%m-%Y"
}

load {
        format = " %1min"
}

group disk {
	cycle = 30
	format = "Disks: {output}"

	disk "/" {
        format = " %percentage_free"
	}

	disk "/home" {
	format = " %free"
	}	
}
