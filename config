pomodoro {
	format = "{ss} {bar}"
	display_bar = "True"
	num_progress_bars = 5
	timer_break = 300
	timer_long_break = 900
	max_breaks = 4
}

mpd_status {
	# Show state, [duration], title (or file) and next song title (or file):
	format = "{state} \[{time}\][[[{artist} - ]{title}]|[{file}]] → [{next_title}|{next_file}]"
	hide_when_paused = "False"
	hide_when_stopped = "False"
	host = "localhost"
	port = "6600"
	state_play = ""
	state_pause = ""
	state_stop = ""
	max_width = 120
	color_play = "default"
	color_pause = "default"
	color_stop = "default"
}

arch_updates {
	format = "UPD: {pacman}"
	hide_if_zero = true
	include_aur = false
	cache_timeout = 600
}	

sysdata {

}

keyboard_layout {
	format =  " {layout}"
}

